{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "node",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"],
}
